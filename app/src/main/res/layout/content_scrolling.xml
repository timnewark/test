<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <ImageView
        android:id="@+id/SA_imageView"
        android:layout_width="350dip"
        android:layout_height="350dip"
        app:tint="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/ic_baseline_18mp_24" />

    <TextView
        android:id="@+id/SA_TV_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decription goes here"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:maxWidth="350sp"
        android:textColor="@color/tanAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/MA2imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/SA_imageView"
        app:layout_constraintTop_toBottomOf="@id/SA_imageView"
        app:tint="@color/tanAccent" />

</androidx.core.widget.NestedScrollView>